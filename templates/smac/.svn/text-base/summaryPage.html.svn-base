  <tr>
    <td colspan="2">                    
        <div id="topPost">
          <div class="titles">
            <h3>Top Posts</h3>
           
  		    <a class="smallArrow" href="{encrypt url='index.php?page=allpost'}#twitterTab">View All</a>&nbsp;<a class="smallArrow" href="{encrypt url='index.php?page=topsummary&act=download_raw&channel=0&type=1'}">Raw Posts</a>
