		<script>
			{literal}
				var check = $("a#menuAtas").attr("no");
				//var check = 1;
				for (i=1;i<=6;i++){
					if (check == i){
						$("a.menuAtas"+i).addClass("select"+i);
					}
				}
				var url = window.location.href;
				url = url.substr(url.lastIndexOf("/") + 1);
				$(".menu-icon").find("a[href='" + url + "']").addClass("current");
			{/literal}
		</script>
