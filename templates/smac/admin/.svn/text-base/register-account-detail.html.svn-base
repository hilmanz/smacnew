<script src="../public_html/js/jquery.validate.js" type="text/javascript"></script>
{literal}
<script type="text/javascript">
$(document).ready(function(){
	$("#editForm").validate();
});
</script>
{/literal}

<div style="padding:10px;">
<h2>Account Registrations Detail</h2>
<hr>

<form id="editForm" action="index.php?s=register&act=editAgency" method="post" enctype="application/x-www-form-urlencoded">

<input type="hidden" name="s" value="register" />
<input type="hidden" name="act" value="editAccount" />
<input type="hidden" name="edit" value="1" />
<input type="hidden" name="id" value="{$list.id}" />

{if $err != ''}
<p>
	{$err}
</p>
{/if}

<table width="100%" border="0" cellspacing="0" cellpadding="0" class="addlist zebra">
	<tr>
		<td>Name</td><td><input type="text" name="name" value="{$list.name}" /></td>
	</tr>
	<tr>
		<td>Email</td><td>{$list.email}</td>
	</tr>
	<tr>
		<td>Contract No.</td>
		<td>
			<input type="text" name="contract_no" id="contract_no" value="{$list.contract_no}"/>
		</td>
	</tr>
	<tr>
		<td>Contact No.</td><td><input type="text" name="contact" value="{$list.contact_no}"/></td>
	</tr>
	<tr>
		<td>Agency Name</td><td>{$list.agency_name}</td>
	</tr>
	<tr>
		<td>Address</td><td><input type="text" name="address" value="{$list.address}" /></td>
	</tr>
	<tr>
		<td>CIty</td><td><input type="text" name="city" value="{$list.city}" /></td>
	</tr>
	<tr>
		<td>State</td><td><input type="text" name="state" value="{$list.state}" /></td>
	</tr>
	<tr>
		<td>Country</td><td><input type="text" name="country" value="{$list.country}" /></td>
	</tr>
	
	<tr>
		<td>Status</td>
		<td>
			<select name="status">
				<option value="0" {if $list.n_status eq 0}selected="selected"{/if}>Disabled</option>
				<option value="1" {if $list.n_status eq 1}selected="selected"{/if}>Actived</option>
			</select>
		</td>
	</tr>
	<tr>
		<td>Account Type</td>
		<td>
			<select name="account_type">
				<option value="0" {if $list.account_type eq 0}selected="selected"{/if}>Trial</option>
				<option value="1" {if $list.account_type eq 1}selected="selected"{/if}>Paid</option>
				<option value="2" {if $list.account_type eq 2}selected="selected"{/if}>Enterprise - Standard</option>
				<option value="3" {if $list.account_type eq 3}selected="selected"{/if}>Agency</option>
				<option value="4" {if $list.account_type eq 4}selected="selected"{/if}>Partner</option>
				<option value="99" {if $list.account_type eq 99}selected="selected"{/if}>Internal Test</option>
				<option value="5" {if $list.account_type eq 5}selected="selected"{/if}>Enterprise - Bulk Mentions</option>
			</select>
		</td>
	</tr>
	<tr>
		<td>Bulk Mentions Limit (for Enterprise - Bulk Mentions Account only)</td>
		<td>
			<input type="text" name="ebm" id="ebm" value="{$list.ebm}"/>
		</td>
	</tr>
	
	{if $email_num > 0}
	<tr>
		<td>Register Email</td>
		<td>
			<ul>
	{section name=i loop=$email}
			<li><a href="index.php?s=register&act=view-email&id={$email[i].id}">{$email[i].date}</a></li>
	{/section}
			</ul>
		</td>
	</tr>
	{/if}
	<tr>
		<td colspan="2">
			
			<input type="submit" value=" Edit " />&nbsp;
			<input type="button" value=" Reset Password " onclick="javascript:window.location.href='index.php?s=register&act=account-reset-password&id={$list.id}'" />
		</td>
	</tr>
	
</table>
</div>
</form>
