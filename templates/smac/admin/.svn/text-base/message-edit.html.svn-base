<div style="padding:10px;">
<h2>Edit Message</h2>
<hr>

<form id="editForm" action="index.php?s=message&act=edit&id={$id}" method="POST" enctype="application/x-www-form-urlencoded">
<input type="hidden" value="1" name="edit" />

{if $err != ''}
<p style="color:#ff0000;font-size:14px;font-weight:bold;">{$err}</p>
{/if}

<table width="100%" border="0" cellspacing="0" cellpadding="0" class="addlist zebra">
	<tr>
		<td>Type</td>
		<td>
			<select name="type" id="type">
				<option value="all" {if $rs.type eq 'all'}selected="selected"{/if}>All</option>
				<option value="personal" {if $rs.type eq 'personal'}selected="selected"{/if}>Personal</option>
			</select>
		</td>
	</tr>
	
	<tr>
		<td>To Account</td>
		<td>
			<select name="account_id">
				{section name=i loop=$list}
				<option value="{$list[i].id}" {if $rs.account_id eq $list[i].id}selected="selected"{/if}>{$list[i].name}</option>
				{/section}
			</select>
		</td>
	</tr>
	
	<tr>
		<td valign="top">Message</td>
		<td>
			<textarea name="notification" cols="50" rows="10">{$rs.notification}</textarea>
		</td>
	</tr>
	
	<tr>
		<td colspan="2"><input type="submit" value=" Edit " /></td>
	</tr>

</table>
</form>
	
</div>
